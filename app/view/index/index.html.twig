{% extends 'base.html.twig' %}

{% block title %}{{ page_title|default('风屿雨博客') }}{% endblock %}

{% block content %}
    <div class="max-w-4xl mx-auto">
        <!-- 博客标题区域 -->
        <div class="text-center mb-12 mt-6">
            <h1 class="text-4xl font-bold text-gray-800 mb-4">{{ page_title|default('风屿雨博客') }}</h1>
            <p class="text-gray-600 text-lg">欢迎来到我的个人博客，分享技术与生活</p>
        </div>

        <!-- 博客文章列表 -->
        {% if posts %}
            <div class="space-y-8">
                {% for post in posts %}
                    <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                        <div class="p-6">
                            <h2 class="text-2xl font-bold text-gray-800 mb-2">
                                <a href="/post/{{ post.id }}"
                                   class="hover:text-blue-600 transition-colors duration-200">
                                    {{ post.title }}
                                </a>
                            </h2>
                            <div class="flex items-center text-gray-500 text-sm mb-4">
                        <span class="mr-4">
                            <i class="far fa-calendar-alt mr-1"></i>
                            {{ post.created_at|date('Y-m-d') }}
                        </span>
                                <span>
                            <i class="far fa-user mr-1"></i>
                            {{ post.author }}
                        </span>
                            </div>
                            <p class="text-gray-600 mb-4 leading-relaxed">
                                {{ post.excerpt }}...
                            </p>
                            <div class="flex justify-between items-center">
                                <a href="/post/{{ post.id }}"
                                   class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200">
                                    阅读更多
                                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </a>
                                <div class="flex space-x-2">
                                    <!-- 这里可以添加标签 -->
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- 分页 -->
            <div class="mt-12">
            {{ pagination|raw }}
            </div>
        {% else %}
            <div class="bg-white rounded-xl shadow-md p-12 text-center">
                <div class="text-gray-400 mb-4">
                    <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-medium text-gray-700 mb-2">暂无文章</h3>
                <p class="text-gray-500">目前还没有发布任何文章，敬请期待！</p>
            </div>
        {% endif %}
    </div>
    <script>
        function jumpToPage(maxPage) {
            const input = document.getElementById('page-input');
            const page = parseInt(input.value);

            if (isNaN(page) || page < 1 || page > maxPage) {
                alert('请输入有效的页码 (1-' + maxPage + ')');
                return;
            }

            // 构造跳转URL，这里需要根据你的路由格式调整
            window.location.href = '/page/' + page;
        }
    </script>

{% endblock %}