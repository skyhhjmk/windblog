<div class="max-w-full mx-auto px-4">
    <!-- 页面标题区域 - 优化响应式字体大小 -->
    <div class="text-center mb-8 sm:mb-12 animate-fade-in-down">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-800 mb-3 sm:mb-4">{{ page_title|default('风屿雨博客') }}</h1>
        <p class="text-gray-600 text-base sm:text-lg md:text-xl">欢迎来到我的博客，这里记录了我的技术分享和生活感悟</p>
    </div>

    <!-- 博客文章列表 - 优化移动端间距和内边距 -->
    {% if posts|length > 0 %}
        <div class="space-y-6 sm:space-y-8">
            {% for post in posts %}
                <div class="bg-white rounded-2xl shadow-md sm:shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 group">
                    <div class="p-4 sm:p-6">
                        <h2 class="text-xl sm:text-2xl font-bold text-gray-800 mb-2 group-hover:text-blue-600 transition-colors duration-200">
                            <a href="/post/{{ post.slug }}.html"
                               class="block tap-highlight">
                                {{ post.title }}
                            </a>
                        </h2>
                        <!-- 优化移动端作者信息显示 -->
                        <div class="flex items-center text-gray-500 text-xs sm:text-sm mb-3 sm:mb-4 space-x-2 sm:space-x-4 flex-wrap">
                            <span class="flex items-center">
                                <i class="far fa-calendar-alt mr-1"></i>
                                {{ post.created_at|date('Y-m-d') }}
                            </span>
                            <span class="flex items-center">
                                <i class="far fa-user mr-1"></i>
                                <span class="font-medium text-blue-600 hover:text-blue-800 transition-colors cursor-pointer" title="查看作者详情">
                                    {% if post.authors|length > 0 %}
                                        {{ post.authors.first().nickname ?: post.authors.first().username }}
                                    {% else %}
                                        未知作者
                                    {% endif %}
                                </span>
                            </span>
                            {% if post.authors|length > 0 and post.authors.first().avatar %}
                            <span class="flex items-center">
                                <img src="{{ post.authors.first().avatar }}" alt="{{ post.authors.first().nickname ?: post.authors.first().username }}" class="w-5 h-5 sm:w-6 sm:h-6 rounded-full mr-1 object-cover" loading="lazy" decoding="async" fetchpriority="low">
                            </span>
                            {% endif %}
                        </div>
                        <p class="text-gray-600 mb-3 sm:mb-4 leading-relaxed">
                            {{ post.excerpt }}...
                        </p>
                        <div class="flex justify-between items-center">
                            <a href="/post/{{ post.slug }}.html"
                               class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200 tap-highlight">
                                阅读更多
                                <svg class="w-4 h-4 ml-1 transition-transform duration-200 group-hover:translate-x-1" 
                                     fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M9 5l7 7-7 7"></path>
                                </svg>
                            </a>
                            <div class="flex space-x-2">
                                <!-- 这里可以添加标签 -->
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- 分页 - 优化移动端居中显示 -->
        <div class="mt-8 sm:mt-12 flex justify-center">
            {{ pagination|raw }}
        </div>
    {% else %}
        <!-- 无文章提示 - 优化移动端布局 -->
        <div class="bg-white rounded-2xl shadow-md sm:shadow-lg p-6 sm:p-12 text-center animate-fade-in">
            <div class="text-gray-400 mb-4">
                <svg class="w-16 h-16 sm:w-24 sm:h-24 mx-auto opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                          d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                </svg>
            </div>
            <h3 class="text-xl sm:text-2xl font-medium text-gray-700 mb-2">暂无文章</h3>
            <p class="text-gray-500 max-w-md mx-auto">目前还没有发布任何文章，敬请期待！</p>
        </div>
    {% endif %}
</div>

<style>
    @keyframes fade-in-down {
        0% {
            opacity: 0;
            transform: translateY(-20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .animate-fade-in-down {
        animation: fade-in-down 0.6s ease-out forwards;
    }
    
    @keyframes fade-in {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }
    
    .animate-fade-in {
        animation: fade-in 0.6s ease-out forwards;
    }
    
    /* 新增移动端触摸反馈样式 */
    .tap-highlight {
        -webkit-tap-highlight-color: rgba(59, 130, 246, 0.2);
    }
    
    /* 优化移动端文章标题的行高 */
    @media (max-width: 640px) {
        h2 {
            line-height: 1.4;
        }
    }
    
    /* 为小屏幕设备优化分页输入框的大小和交互 */
    @media (max-width: 640px) {
        #page-input {
            width: 4rem;
            text-align: center;
        }
    }
</style>

<script>
    function jumpToPage(maxPage) {
        const input = document.getElementById('page-input');
        const page = parseInt(input.value);
        if (isNaN(page) || page < 1 || page > maxPage) {
            alert('请输入有效的页码 (1-' + maxPage + ')');
            return;
        }
        window.location.href = '/page/' + page + '.html';
    }

    // PJAX 片段内更新标题并通知就绪


</script>