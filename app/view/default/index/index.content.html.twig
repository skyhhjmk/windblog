<title>{{ page_title|default('WindBlog') }}</title>
<div id="pjax-container">
<div class="max-w-full mx-auto px-4">
    <!-- 页面标题区域 - 优化响应式字体大小 -->
    <div class="text-center mb-8 sm:mb-12 fade-in-on-scroll no-animation" data-animation-delay="0">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-3 sm:mb-4"
            style="color: var(--neu-text);">{{ page_title|default('WindBlog') }}</h1>
        <p class="text-base sm:text-lg md:text-xl" style="color: var(--neu-text-light);">不知名海域的知名岛屿</p>
    </div>

    <!-- 博客文章列表 - 优化移动端间距和内边距 -->
    {% if posts|length > 0 %}
        <div class="space-y-6 sm:space-y-8">
            {% for post in posts %}
                <div class="neu-card overflow-hidden transition-all duration-300 group">
                    <div class="p-4 sm:p-6">
                        <h2 class="text-xl sm:text-2xl font-bold mb-2 transition-colors duration-200"
                            style="color: var(--neu-text);">
                            <style>
                                .neu-card:hover h2 {
                                    color: var(--neu-primary) !important;
                                }
                            </style>
                            <a href="/post/{{ post.slug }}.html"
                               class="block tap-highlight">
                                {{ post.title }}
                            </a>
                        </h2>
                        <!-- 优化移动端作者信息显示 -->
                        <div class="flex items-center text-xs sm:text-sm mb-3 sm:mb-4 space-x-2 sm:space-x-4 flex-wrap"
                             style="color: var(--neu-text-light);">
                            <span class="flex items-center">
                                <i class="far fa-calendar-alt mr-1"></i>
                                {{ post.created_at|local_date('Y-m-d') }}
                            </span>
                            <span class="flex items-center">
                                <i class="far fa-user mr-1"></i>
                                <span class="font-medium neu-link transition-colors cursor-pointer"
                                      title="查看作者详情">
                                    {% if post.authors|length > 0 %}
                                        {{ post.authors.first().nickname ?: post.authors.first().username }}
                                    {% else %}
                                        未知作者
                                    {% endif %}
                                </span>
                            </span>
                            {% if post.authors|length > 0 and post.authors.first().avatar %}
                            <span class="flex items-center">
                                <img src="{{ post.authors.first().avatar }}" alt="{{ post.authors.first().nickname ?: post.authors.first().username }}" class="w-5 h-5 sm:w-6 sm:h-6 rounded-full mr-1 object-cover" loading="lazy" decoding="async" fetchpriority="low">
                            </span>
                            {% endif %}
                        </div>
                        <p class="mb-3 sm:mb-4 leading-relaxed" style="color: var(--neu-text);">
                            {{ post.excerpt }}...
                        </p>
                        <div class="flex justify-between items-center">
                            <a href="/post/{{ post.slug }}.html"
                               class="neu-btn neu-btn-primary neu-btn-sm inline-flex items-center font-medium transition-colors duration-200 tap-highlight">
                                阅读更多
                                <svg class="w-4 h-4 ml-1 transition-transform duration-200 group-hover:translate-x-1"
                                     fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M9 5l7 7-7 7"></path>
                                </svg>
                            </a>
                            <div class="flex flex-wrap gap-2">
                                {% if post.categories is defined and post.categories|length > 0 %}
                                    {% for c in post.categories %}
                                        <a href="/category/{{ c.slug }}.html"
                                           class="neu-badge neu-badge-primary transition-colors">
                                            <i class="fas fa-folder-open"></i>{{ c.name }}
                                        </a>
                                    {% endfor %}
                                {% endif %}
                                {% if post.tags is defined and post.tags|length > 0 %}
                                    {% for t in post.tags %}
                                        <a href="/tag/{{ t.slug }}.html" class="neu-badge transition-colors"
                                           style="background: linear-gradient(145deg, #f3e8ff, #ede9fe); color: #9333ea;">
                                            <i class="fas fa-hashtag"></i>{{ t.name }}
                                        </a>
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- 分页 - 优化移动端居中显示 -->
        <div class="mt-8 sm:mt-12 flex justify-center">
            {{ pagination|raw }}
        </div>
    {% else %}
        <!-- 无文章提示 - 优化移动端布局 -->
        <div class="neu-card p-6 sm:p-12 text-center fade-in-on-scroll no-animation"
             data-animation-delay="0.2">
            <div class="mb-4" style="color: var(--neu-text-light);">
                <svg class="w-16 h-16 sm:w-24 sm:h-24 mx-auto opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                          d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                </svg>
            </div>
            <h3 class="text-xl sm:text-2xl font-medium mb-2" style="color: var(--neu-text);">暂无文章</h3>
            <p class="max-w-md mx-auto" style="color: var(--neu-text-light);">目前还没有发布任何文章，敬请期待！</p>
        </div>
    {% endif %}
</div>

<!-- PJAX 隐藏侧栏片段：完成后注入到布局右侧栏 -->
<div id="pjax-sidebar-html" style="display:none">
    {% if sidebar is defined and sidebar.widgets is defined %}
        {% for widget in sidebar.widgets %}
            {% if widget.enabled and widget.html is defined %}
                <div class="sidebar-widget" data-widget-key="{{ widget.key ?? widget.id ?? widget.slug ?? widget.name ?? loop.index }}" data-widget-type="{{ widget.type ?? '' }}">
                    {{ widget.html|raw }}
                </div>
            {% endif %}
        {% endfor %}
    {% endif %}
</div>

<style>
    /* 新增移动端触摸反馈样式 */
    .tap-highlight {
        -webkit-tap-highlight-color: rgba(59, 130, 246, 0.2);
    }
</style>

<script>
    function jumpToPage(maxPage) {
        const input = document.getElementById('page-input');
        const page = parseInt(input.value);
        if (isNaN(page) || page < 1 || page > maxPage) {
            alert('请输入有效的页码 (1-' + maxPage + ')');
            return;
        }
        window.location.href = '/?page=' + page;
    }

    // 分页输入框事件
    document.addEventListener('DOMContentLoaded', function() {
        const input = document.getElementById('page-input');
        if (input) {
            input.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    const maxPage = parseInt(this.getAttribute('max'));
                    jumpToPage(maxPage);
                }
            });
        }

        // 修复移动端分页输入框样式问题
        if (window.innerWidth <= 768) {
            const pageInput = document.getElementById('page-input');
            if (pageInput) {
                pageInput.classList.add('w-20', 'text-center');
            }
        }
    });
</script>

