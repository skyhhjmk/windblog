{% extends 'base.html.twig' %}

{% block title %}{{ page_title|default('风屿雨博客') }}{% endblock %}

{% block content %}
    <div class="max-w-full mx-auto px-4">
        <!-- 页面标题区域 - 优化响应式字体大小 -->
        <div class="text-center mb-8 sm:mb-12 fade-in-on-scroll">
            <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-800 mb-3 sm:mb-4">{{ page_title|default('风屿雨博客') }}</h1>
            <p class="text-gray-600 text-base sm:text-lg md:text-xl">不知名海域的知名岛屿</p>
        </div>

        <!-- 博客文章列表 - 优化移动端间距和内边距 -->
        {% if posts|length > 0 %}
            <div class="space-y-6 sm:space-y-8">
                {% for post in posts %}
                    <div class="bg-white rounded-2xl shadow-md sm:shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 hover-lift accelerated group fade-in-on-scroll">
                        <div class="p-4 sm:p-6">
                            <h2 class="text-xl sm:text-2xl font-bold text-gray-800 mb-2 group-hover:text-blue-600 transition-colors duration-200">
                                <a href="/post/{{ post.slug }}.html"
                                   class="block tap-highlight">
                                    {{ post.title }}
                                </a>
                            </h2>
                            <!-- 优化移动端作者信息显示 -->
                            <div class="flex items-center text-gray-500 text-xs sm:text-sm mb-3 sm:mb-4 space-x-2 sm:space-x-4 flex-wrap">
                                <span class="flex items-center">
                                    <i class="far fa-calendar-alt mr-1"></i>
                                    {{ post.created_at|date('Y-m-d') }}
                                </span>
                                <span class="flex items-center">
                                    <i class="far fa-user mr-1"></i>
                                    <span class="font-medium text-blue-600 hover:text-blue-800 transition-colors cursor-pointer" title="查看作者详情">
                                        {% if post.authors|length > 0 %}
                                            {{ post.authors.first().nickname ?: post.authors.first().username }}
                                        {% else %}
                                            未知作者
                                        {% endif %}
                                    </span>
                                </span>
                                {% if post.authors|length > 0 and post.authors.first().avatar %}
                                <span class="flex items-center">
                                    <img src="{{ post.authors.first().avatar }}" alt="{{ post.authors.first().nickname ?: post.authors.first().username }}" class="w-5 h-5 sm:w-6 sm:h-6 rounded-full mr-1 object-cover" loading="lazy" decoding="async" fetchpriority="low">
                                </span>
                                {% endif %}
                            </div>
                            <p class="text-gray-600 mb-3 sm:mb-4 leading-relaxed">
                                {{ post.excerpt }}...
                            </p>
                            <div class="flex justify-between items-center">
                                <a href="/post/{{ post.slug }}.html"
                                   class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200 tap-highlight">
                                    阅读更多
                                    <svg
                                        class="w-4 h-4 ml-1 transition-transform duration-200 group-hover:translate-x-1"
                                         fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </a>
                                <div class="flex flex-wrap gap-2">
                                    {% if post.categories is defined and post.categories|length > 0 %}
                                        {% for c in post.categories %}
                                            <a href="/category/{{ c.slug }}.html" class="px-2 py-1 text-xs rounded-full bg-blue-50 text-blue-700 border border-blue-100 hover:bg-blue-100 transition-colors">
                                                <i class="fas fa-folder-open mr-1"></i>{{ c.name }}
                                            </a>
                                        {% endfor %}
                                    {% endif %}
                                    {% if post.tags is defined and post.tags|length > 0 %}
                                        {% for t in post.tags %}
                                            <a href="/tag/{{ t.slug }}.html" class="px-2 py-1 text-xs rounded-full bg-purple-50 text-purple-700 border border-purple-100 hover:bg-purple-100 transition-colors">
                                                <i class="fas fa-hashtag mr-1"></i>{{ t.name }}
                                            </a>
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- 分页 - 优化移动端居中显示 -->
            <div class="mt-8 sm:mt-12 flex justify-center">
                {{ pagination|raw }}
            </div>
        {% else %}
            <!-- 无文章提示 - 优化移动端布局 -->
            <div class="bg-white rounded-2xl shadow-md sm:shadow-lg p-6 sm:p-12 text-center fade-in-on-scroll">
                <div class="text-gray-400 mb-4">
                    <svg class="w-16 h-16 sm:w-24 sm:h-24 mx-auto opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                              d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                    </svg>
                </div>
                <h3 class="text-xl sm:text-2xl font-medium text-gray-700 mb-2">暂无文章</h3>
                <p class="text-gray-500 max-w-md mx-auto">目前还没有发布任何文章，敬请期待！</p>
            </div>
        {% endif %}
    </div>

    <style>
        /* 优化移动端文章标题的行高 */
        @media (max-width: 640px) {
            h2 {
                line-height: 1.4;
            }
        }

        /* 为小屏幕设备优化分页输入框的大小和交互 */
        @media (max-width: 640px) {
            #page-input {
                width: 4rem;
                text-align: center;
            }
        }
    </style>

    <!-- 优化后的脚本 - 移除可能与PJAX冲突的代码 -->
    <script>
        // 页码跳转功能已由全局PJAX配置处理，这里仅保留占位符
        function jumpToPage(maxPage) {
            // 此函数已经在base.html.twig中被重写，使用PJAX实现
            console.warn('jumpToPage 函数已由全局PJAX配置处理');
        }

        // 滚动触发动画完全由全局动画工具库管理
        // 移除本地实现以避免冲突
    </script>

{% endblock %}
