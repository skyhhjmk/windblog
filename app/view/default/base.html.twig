                if (!seoDataContainer) {
                    console.warn('PJAX SEO: 未找到 #pjax-seo-data 容器');
                    return;
                }

                // console.log('PJAX SEO: 找到 SEO 数据容器');

                // 要更新的 meta 标签类型
                const metaSelectors = [
                    'meta[name="description"]',
                    'meta[name="keywords"]',
                    'meta[name="author"]',
                    'meta[property^="og:"]',
                    'meta[property^="article:"]',
                    'meta[name^="twitter:"]',
                    'link[rel="canonical"]'
                ];

                let removedCount = 0;
                let addedCount = 0;

                // 移除旧的 meta 标签
                metaSelectors.forEach(function(selector) {
                    try {
                        const oldMetas = document.head.querySelectorAll(selector);
                        oldMetas.forEach(function(meta) {
                            if (meta.parentNode) {
                                meta.parentNode.removeChild(meta);
                                removedCount++;
                            }
                        });
                    } catch (e) {
                        console.warn('PJAX SEO: 移除旧 meta 标签失败', selector, e);
                    }
                });

                // console.log('PJAX SEO: 移除了', removedCount, '个旧 meta 标签');

                // 从 SEO 数据容器中添加新的 meta 标签
                metaSelectors.forEach(function(selector) {
                    try {
                        const newMetas = seoDataContainer.querySelectorAll(selector);
                        if (newMetas.length > 0) {
                            // console.log('PJAX SEO: 找到', newMetas.length, '个', selector, '标签');
                        }
                        newMetas.forEach(function(meta) {
                            const clonedMeta = meta.cloneNode(true);
                            document.head.appendChild(clonedMeta);
                            addedCount++;
                        });
                    } catch (e) {
                        console.warn('PJAX SEO: 添加新 meta 标签失败', selector, e);
                    }
                });

                // console.log('PJAX SEO: 添加了', addedCount, '个新 meta 标签');

                // 更新 Schema.org JSON-LD 结构化数据
                try {
                    // 移除旧的 JSON-LD
                    const oldJsonLd = document.head.querySelectorAll('script[type="application/ld+json"]');
                    // console.log('PJAX SEO: 移除', oldJsonLd.length, '个旧 JSON-LD');
                    oldJsonLd.forEach(function(script) {
                        if (script.parentNode) {
                            script.parentNode.removeChild(script);
                        }
                    });

                    // 从 SEO 数据容器中添加新的 JSON-LD
                    const newJsonLd = seoDataContainer.querySelectorAll('script[type="application/ld+json"]');
                    // console.log('PJAX SEO: 添加', newJsonLd.length, '个新 JSON-LD');
                    newJsonLd.forEach(function(script) {
                        const clonedScript = script.cloneNode(true);
                        document.head.appendChild(clonedScript);
                    });
                } catch (e) {
                    console.error('PJAX SEO: 更新 JSON-LD 结构化数据失败', e);
                }

                // console.log('PJAX SEO: SEO 标签更新完成');
            }

            // 初始化
            function initPJAX() {
                // 获取DOM元素
                pjaxConfig.progressBar = document.getElementById('pjax-progress');
