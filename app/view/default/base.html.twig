    <!-- 主题初始化（避免闪烁） -->
    <script>
        (function () {
            try {
                var storageKey = 'theme';
                var t = localStorage.getItem(storageKey);
                if (t !== 'light' && t !== 'dark') {
                    t = (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) ? 'dark' : 'light';
                }
                document.documentElement.setAttribute('data-theme', t);
                document.documentElement.classList.toggle('dark', t === 'dark');
                var meta = document.querySelector('meta[name="theme-color"]');
                if (meta && t === 'dark') meta.setAttribute('content', '#0d1117');
                if (window.matchMedia) {
                    try {
                        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', function (e) {
                            try {
                                if (!localStorage.getItem(storageKey)) {
                                    var nt = e.matches ? 'dark' : 'light';
                                    applyTheme(nt, false);
                                }
                            } catch (_) {
                            }
                        });
                    } catch (_) {
                    }
                }

                function applyTheme(theme, persist) {
                    if (theme !== 'dark' && theme !== 'light') return;
                    document.documentElement.setAttribute('data-theme', theme);
                    document.documentElement.classList.toggle('dark', theme === 'dark');
                    try {
                        if (persist) localStorage.setItem(storageKey, theme);
                    } catch (_) {
                    }
                    var m2 = document.querySelector('meta[name="theme-color"]');
                    if (m2) m2.setAttribute('content', theme === 'dark' ? '#0d1117' : '#667eea');
                    // 切换代码高亮主题（GitHub light/dark）
                    var l = document.getElementById('hljs-theme-light');
                    var d = document.getElementById('hljs-theme-dark');
                    try {
                        if (l) l.disabled = (theme !== 'light');
                        if (d) d.disabled = (theme !== 'dark');
                    } catch (_) {
                    }
                    var btn = document.getElementById('themeToggleBtn');
                    if (btn) {
                        var i = btn.querySelector('i');
                        if (i) {
                            i.classList.remove('fa-moon', 'fa-sun');
                            i.classList.add(theme === 'dark' ? 'fa-sun' : 'fa-moon');
                        }
                        btn.setAttribute('aria-label', theme === 'dark' ? '切换到浅色模式' : '切换到深色模式');
                        btn.title = btn.getAttribute('aria-label');
                    }
                    var mb = document.getElementById('mobileThemeToggle');
                    if (mb) {
                        var mi = mb.querySelector('i');
                        var tx = mb.querySelector('span[data-text]');
                        if (mi) {
                            mi.classList.remove('fa-moon', 'fa-sun');
                            mi.classList.add(theme === 'dark' ? 'fa-sun' : 'fa-moon');
                        }
                        if (tx) tx.textContent = theme === 'dark' ? '浅色模式' : '深色模式';
                    }
                }

                function currentTheme() {
                    return document.documentElement.getAttribute('data-theme') || 'light';
                }

                document.addEventListener('DOMContentLoaded', function () {
                    applyTheme(t, false);
                    var btn = document.getElementById('themeToggleBtn');
                    if (btn) {
                        btn.addEventListener('click', function () {
                            var next = currentTheme() === 'dark' ? 'light' : 'dark';
                            applyTheme(next, true);
                        });
                    }
                    var mb = document.getElementById('mobileThemeToggle');
                    if (mb) {
                        mb.addEventListener('click', function (e) {
                            e.preventDefault();
                            var next = currentTheme() === 'dark' ? 'light' : 'dark';
                            applyTheme(next, true);
                        });
                    }
                    document.addEventListener('pjax:complete', function () {
                        applyTheme(currentTheme(), false);
                    });
                });
            } catch (_) {
            }
        })();
    </script>
