            if (status === 'connected') {
                statusEl.className = 'text-xs text-green-500';
                if (icon) icon.className = 'fas fa-circle text-green-500';
                statusEl.title = 'å·²è¿æ¥';
                statusEl.innerHTML = '<i class="fas fa-circle" style="font-size: 6px;"></i> å·²è¿æ¥';
            } else if (status === 'connecting') {
                statusEl.className = 'text-xs text-yellow-500';
                if (icon) icon.className = 'fas fa-circle text-yellow-500';
                statusEl.title = 'è¿æ¥ä¸­...';
                statusEl.innerHTML = '<i class="fas fa-circle" style="font-size: 6px;"></i> è¿æ¥ä¸­...';
            } else if (status === 'disconnected') {
                statusEl.className = 'text-xs text-red-500';
                if (icon) icon.className = 'fas fa-circle text-red-500';
                statusEl.title = 'å·²æ–­å¼€';
                statusEl.innerHTML = '<i class="fas fa-circle" style="font-size: 6px;"></i> å·²æ–­å¼€';
            } else {
                statusEl.className = 'text-xs text-gray-400';
                if (icon) icon.className = 'fas fa-circle text-gray-400';
                statusEl.title = message || 'æœªçŸ¥çŠ¶æ€';
            }
        }

        // å‘é€å¿ƒè·³ï¼ˆå¼‚æ­¥éé˜»å¡ï¼‰
        function sendHeartbeat() {
            // ä½¿ç”¨ requestIdleCallback åœ¨ç©ºé—²æ—¶å‘é€
            const scheduleRequest = window.requestIdleCallback || function (cb) {
                return setTimeout(cb, 100);
            };

            scheduleRequest(function () {
                fetch('/online/ws/heartbeat', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    // ä½¿ç”¨ä½ä¼˜å…ˆçº§è¯·æ±‚
                    priority: 'low',
                    // å¿ƒè·³è¯·æ±‚ä¸éœ€è¦ç­‰å¾…å“åº”
                    keepalive: true
                }).catch(err => {
                    console.warn('Heartbeat failed:', err);
                });
            });
        }

        // åŠ¨æ€åŠ è½½ Push.js
        function loadPushScript(callback) {
            if (window.Push) {
                callback();
                return;
            }

            const script = document.createElement('script');
            script.src = '/plugin/webman/push/push.js';
            script.onload = callback;
            script.onerror = function () {
                console.error('Failed to load push.js');
                updateStatus('disconnected', 'åŠ è½½å¤±è´¥');
            };
            document.head.appendChild(script);
        }

        // è¿æ¥ WebSocket
        function connect() {
            if (pusher && pusher.connection && pusher.connection.state === 'connected') {
                return; // å·²ç»è¿æ¥
            }

            loadPushScript(function () {
                try {
                    updateStatus('connecting');

                    // åˆå§‹åŒ– Push
                    pusher = new Push({
                        url: PUSH_CONFIG.websocket,
                        app_key: PUSH_CONFIG.appKey,
                        auth: '{{ config('plugin.webman.push.app.auth') }}',
                    });

                    // è®¢é˜…é¢‘é“ï¼ˆå…ˆè®¢é˜…ï¼Œå†é€šçŸ¥ä¸Šçº¿ï¼‰
                    console.log('Subscribing to online-stats channel...');
                    channel = pusher.subscribe('online-stats');

                    // é€šçŸ¥æœåŠ¡å™¨ä¸Šçº¿çš„å‡½æ•°ï¼ˆå¼‚æ­¥éé˜»å¡ï¼‰
                    function notifyServerOnline() {
                        console.log('Notifying server of connection...');

                        // ä½¿ç”¨ requestIdleCallback æˆ– setTimeout å°†è¯·æ±‚å»¶è¿Ÿåˆ°ç©ºé—²æ—¶é—´
                        const scheduleRequest = window.requestIdleCallback || function (cb) {
                            return setTimeout(cb, 100);
                        };

                        scheduleRequest(function () {
                            fetch('/online/ws/connect', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                    'X-Requested-With': 'XMLHttpRequest'
                                },
                                // ä½¿ç”¨ä½ä¼˜å…ˆçº§è¯·æ±‚ï¼Œä¸é˜»å¡å…³é”®èµ„æº
                                priority: 'low'
                            }).then(res => res.json())
                                .then(data => {
                                    console.log('âœ… Connected to server:', data);
                                    // å¦‚æœè¿”å›äº†ç»Ÿè®¡æ•°æ®ï¼Œç«‹å³æ›´æ–°
                                    if (data.data) {
                                        console.log('ğŸ“Š Initial stats from connect:', data.data);

                                        // ä½¿ç”¨ requestAnimationFrame ä¼˜åŒ– DOM æ›´æ–°
                                        requestAnimationFrame(function () {
                                            updateOnlineStats(data.data);
                                        });

                                        // æ˜¾ç¤ºæ¬¢è¿é€šçŸ¥ï¼ˆè¿›ä¸€æ­¥å»¶è¿Ÿï¼‰
                                        if (data.data.welcome_message || data.data.location) {
                                            setTimeout(function () {
                                                const location = data.data.location ? data.data.location.display || '' : '';
                                                const message = data.data.welcome_message || 'æ¬¢è¿ä½¿ç”¨åœ¨çº¿ç»Ÿè®¡åŠŸèƒ½';
                                                showNotification({
                                                    type: 'welcome',
                                                    icon: 'ğŸ‰',
                                                    title: 'æ¬¢è¿ï¼',
                                                    message: message,
                                                    location: location
                                                });
                                            }, 300);
                                        }
                                    }
                                })
                                .catch(err => {
                                    console.error('âŒ Connect notify failed:', err);
                                });
                        });
                    }

                    // å°è¯•å¤šä¸ªäº‹ä»¶åç§°
                    channel.on('pusher_internal:subscription_succeeded', function () {
                        console.log('âœ… Subscribed (pusher_internal) to online-stats channel');
                        notifyServerOnline();
                    });

                    channel.on('pusher:subscription_succeeded', function () {
                        console.log('âœ… Subscribed (pusher) to online-stats channel');
                        notifyServerOnline();
                    });

                    // å¦‚æœè®¢é˜…æˆåŠŸäº‹ä»¶ä¸è§¦å‘ï¼Œå»¶è¿Ÿ2ç§’åç›´æ¥é€šçŸ¥
                    setTimeout(function () {
                        if (channel.subscribed === undefined || !channel.subscribed) {
                            console.warn('âš ï¸ Subscription event not received, notifying anyway...');
                            notifyServerOnline();
                        }
                    }, 2000);

                    // ç›‘å¬åœ¨çº¿ç»Ÿè®¡æ›´æ–°
                    channel.on('stats-updated', function (data) {
                        console.log('ğŸ“Š Stats updated from broadcast:', data);
                        updateOnlineStats(data);
                    });

                    // ç›‘å¬ç”¨æˆ·ä¸Šçº¿äº‹ä»¶
                    channel.on('user-online', function (data) {
                        if (data && data.user_info) {
                            const userInfo = data.user_info;
                            const isGuest = data.type === 'guest_online';
                            const location = userInfo.location || 'æœªçŸ¥åœ°åŒº';

                            let message = '';
                            if (isGuest) {
                                message = `æœ‰æ–°è®¿å®¢ä¸Šçº¿äº†`;
                            } else {
                                const username = userInfo.nickname || userInfo.username;
                                message = `${username} ä¸Šçº¿äº†`;
                            }

                            showNotification({
                                type: 'user-online',
                                icon: isGuest ? 'ğŸŒ' : 'ğŸ‘¤',
                                title: 'ç”¨æˆ·ä¸Šçº¿',
                                message: message,
                                location: location,
                                badge: isGuest ? 'guest' : 'user'
                            });
                        }
                    });

                    // ç›‘å¬ç”¨æˆ·ä¸‹çº¿äº‹ä»¶
                    channel.on('user-offline', function (data) {
                        if (data && data.user_info) {
                            const userInfo = data.user_info;
                            const isGuest = data.type === 'guest_offline';
                            const location = userInfo.location || 'æœªçŸ¥åœ°åŒº';

                            let message = '';
                            if (isGuest) {
                                message = `æœ‰è®¿å®¢ç¦»å¼€äº†`;
                            } else {
                                const username = userInfo.nickname || userInfo.username;
                                message = `${username} ç¦»å¼€äº†`;
                            }

                            showNotification({
                                type: 'user-offline',
                                icon: 'ğŸ‘‹',
                                title: 'ç”¨æˆ·ç¦»çº¿',
                                message: message,
                                location: location,
                                badge: isGuest ? 'guest' : 'user'
                            });
                        }
                    });

                    // ç›‘å¬è¿æ¥çŠ¶æ€å˜åŒ–
                    pusher.connection.on('state_change', function (states) {
                        console.log('Connection state:', states.previous, '->', states.current);

                        if (states.current === 'connected') {
                            console.log('WebSocket connected');
                            updateStatus('connected');

                            // å¯åŠ¨å¿ƒè·³
                            if (heartbeatInterval) clearInterval(heartbeatInterval);
                            heartbeatInterval = setInterval(sendHeartbeat, HEARTBEAT_INTERVAL);
                        } else if (states.current === 'disconnected') {
                            console.log('WebSocket disconnected');
                            updateStatus('disconnected');

                            // æ¸…ç†å¿ƒè·³
                            if (heartbeatInterval) {
                                clearInterval(heartbeatInterval);
                                heartbeatInterval = null;
                            }

                            // å°è¯•é‡è¿
                            if (reconnectTimeout) clearTimeout(reconnectTimeout);
                            reconnectTimeout = setTimeout(connect, RECONNECT_DELAY);
                        } else if (states.current === 'connecting') {
                            updateStatus('connecting');
                        }
                    });

                } catch (e) {
                    console.error('WebSocket initialization failed:', e);
                    updateStatus('disconnected', 'åˆå§‹åŒ–å¤±è´¥');

                    // é‡è¯•
                    if (reconnectTimeout) clearTimeout(reconnectTimeout);
                    reconnectTimeout = setTimeout(connect, RECONNECT_DELAY);
                }
            });
        }

        // æ–­å¼€è¿æ¥
        function disconnect() {
            if (heartbeatInterval) {
                clearInterval(heartbeatInterval);
                heartbeatInterval = null;
            }

            if (reconnectTimeout) {
                clearTimeout(reconnectTimeout);
                reconnectTimeout = null;
            }

            if (pusher) {
                // é€šçŸ¥æœåŠ¡å™¨ä¸‹çº¿
                fetch('/online/ws/disconnect', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                }).catch(err => {
                    console.error('Disconnect notify failed:', err);
                });

                pusher.disconnect();
                pusher = null;
                channel = null;
            }

            updateStatus('disconnected');
        }

        // é¦–å…ˆè·å–åˆå§‹ç»Ÿè®¡æ•°æ®ï¼ˆå¼‚æ­¥éé˜»å¡ï¼‰
        function loadInitialStats() {
            // ä½¿ç”¨ requestIdleCallback å»¶è¿Ÿè¯·æ±‚
            const scheduleRequest = window.requestIdleCallback || function (cb) {
                return setTimeout(cb, 50);
            };

            scheduleRequest(function () {
                fetch('/online/ws/stats', {
                    // ä½¿ç”¨ä½ä¼˜å…ˆçº§è¯·æ±‚
                    priority: 'low'
                })
                    .then(res => res.json())
                    .then(data => {
                        if (data.code === 0 && data.data) {
                            // ä½¿ç”¨ requestAnimationFrame ä¼˜åŒ– DOM æ›´æ–°
                            requestAnimationFrame(function () {
                                updateOnlineStats(data.data);
                            });
                        }
                    })
                    .catch(err => {
                        console.warn('Failed to load initial stats:', err);
                    });
            });
        }

        // é¡µé¢åŠ è½½å®Œæˆåç«‹å³åŠ è½½åˆå§‹æ•°æ®ï¼Œç„¶åå»¶è¿Ÿè¿æ¥ WebSocket
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', function () {
                loadInitialStats();
                setTimeout(connect, 1500); // å»¶è¿Ÿ1.5ç§’è¿æ¥
            });
        } else {
            loadInitialStats();
            setTimeout(connect, 1500); // å»¶è¿Ÿ1.5ç§’è¿æ¥
        }

        // é¡µé¢å…³é—­æ—¶æ–­å¼€
        window.addEventListener('beforeunload', disconnect);

        // å¯¼å‡º API
        window.OnlineStatsWS = {
            connect: connect,
            disconnect: disconnect,
            sendHeartbeat: sendHeartbeat
        };
    })();
</script>
