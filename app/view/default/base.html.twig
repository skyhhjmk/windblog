<!-- PJAX 初始化 -->
<script>
    (function() {
        if (!window.jQuery || typeof jQuery.fn.pjax !== 'function') return;
        jQuery(function($) {
            const selector = 'a[href^="/"]:not([target="_blank"]):not([data-no-pjax])';
            $(document).pjax(selector, '#pjax-container', {
                fragment: '#pjax-container',
                timeout: 8000,
                scrollTo: 0
            });

            // 点击即刻触发动画反馈（不等请求发出）
            $(document).on('click', selector, function() {
                const bar = document.getElementById('pjax-progress');
                if (bar) {
                    bar.style.transition = 'none';
                    bar.style.width = '0';
                    // 触发重绘，确保进度条从 0% 开始
                    void bar.offsetWidth;
                    bar.style.transition = 'width 0.3s ease';
                    bar.style.width = '10%';
                }
                document.body.classList.add('pjax-loading');
            });

            $(document).on('pjax:send', function() {
                const bar = document.getElementById('pjax-progress');
                if (bar) {
                    // 确保至少推进到 30%
                    const current = parseFloat(bar.style.width) || 0;
                    if (current < 30) bar.style.width = '30%';
                }
                document.body.classList.add('pjax-loading');
            });

            $(document).on('pjax:complete', function() {
                const __bar = document.getElementById('pjax-progress');
                if (__bar) {
                    __bar.style.width = '100%';
                    setTimeout(() => { __bar.style.width = '0'; }, 200);
                }
                document.body.classList.remove('pjax-loading');
                const topbar = document.getElementById('topbarTitle');
                if (topbar) { topbar.textContent = document.title; }
                document.dispatchEvent(new CustomEvent('page:ready'));
            });

            $(document).on('pjax:error', function() {
                const bar = document.getElementById('pjax-progress');
                if (bar) { bar.style.width = '0'; }
                document.body.classList.remove('pjax-loading');
            });
        });
    })();
</script>

<script>
// 移动端菜单功能
(function() {
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const closeMobileMenuBtn = document.getElementById('closeMobileMenuBtn');
    const mobileMenuOverlay = document.getElementById('mobileMenuOverlay');
    const mobileMenu = document.getElementById('mobileMenu');
    
    if (mobileMenuBtn && closeMobileMenuBtn && mobileMenuOverlay && mobileMenu) {
        mobileMenuBtn.addEventListener('click', function() {
            mobileMenuOverlay.classList.remove('hidden');
            mobileMenu.classList.remove('closing');
        });
        
        function closeMenu() {
            mobileMenu.classList.add('closing');
            setTimeout(() => {
                mobileMenuOverlay.classList.add('hidden');
            }, 300);
        }
        
        closeMobileMenuBtn.addEventListener('click', closeMenu);
        mobileMenuOverlay.addEventListener('click', function(e) {
            if (e.target === mobileMenuOverlay) {
                closeMenu();
            }
        });
        
        // 点击菜单项后关闭菜单
        const mobileMenuLinks = mobileMenu.querySelectorAll('a');
        mobileMenuLinks.forEach(link => {
            link.addEventListener('click', closeMenu);
        });
    }
})();

