            // 更新 SEO meta 标签和结构化数据
            function updateSeoMetaTags(newDoc) {
                if (!newDoc || !newDoc.querySelectorAll) {
                    console.warn('PJAX SEO: newDoc 无效');
                    return;
                }

                // console.log('PJAX SEO: 开始更新 SEO 标签...');

                // 从响应中查找 pjax-seo-data 容器
