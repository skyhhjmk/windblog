{# 基础小工具包装模板 #}
<div class="bg-white rounded-lg shadow-md p-6 mb-6 widget-container" data-widget-type="{{ type }}"
     data-widget-id="{{ id }}">
    {% if title is defined and title %}
        <h3 class="text-lg font-semibold text-gray-800 mb-4 border-b pb-2">{{ title }}</h3>
    {% endif %}
    <div class="widget-content">
        {% block widget_content %}{% endblock %}
    </div>
</div>
