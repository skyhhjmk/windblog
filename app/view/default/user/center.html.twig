{% extends 'base.html.twig' %}

{% block title %}用户中心 - {{ site.name }}{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-6xl mx-auto">
            <h1 class="text-3xl font-bold mb-8">用户中心</h1>

            <!-- 标签页导航 -->
            <div class="bg-white shadow rounded-lg mb-6">
                <div class="border-b border-gray-200">
                    <nav class="flex -mb-px" role="tablist">
                        <button
                            class="tab-button active px-6 py-4 border-b-2 border-blue-500 font-medium text-blue-600 focus:outline-none"
                            onclick="switchTab('profile')"
                            id="tab-profile">
                            <i class="fas fa-user mr-2"></i>个人资料
                        </button>
                        <button
                            class="tab-button px-6 py-4 border-b-2 border-transparent font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300 focus:outline-none"
                            onclick="switchTab('oauth')"
                            id="tab-oauth">
                            <i class="fas fa-link mr-2"></i>账号绑定
                        </button>
                        <button
                            class="tab-button px-6 py-4 border-b-2 border-transparent font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300 focus:outline-none"
                            onclick="switchTab('security')"
                            id="tab-security">
                            <i class="fas fa-shield-alt mr-2"></i>安全设置
                        </button>
                        <button
                            class="tab-button px-6 py-4 border-b-2 border-transparent font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300 focus:outline-none"
                            onclick="switchTab('preferences')"
                            id="tab-preferences">
                            <i class="fas fa-cog mr-2"></i>偏好设置
                        </button>
                    </nav>
                </div>
            </div>

            <!-- 个人资料标签页 -->
            <div id="content-profile" class="tab-content">
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-xl font-semibold mb-6">个人资料</h2>

                    <!-- 头像 -->
                    <div class="flex items-center space-x-6 mb-8">
                        <div class="relative group">
                            <img src="{{ user.getAvatarUrl(200, 'identicon') }}" alt="{{ user.nickname }}"
                                 class="w-24 h-24 rounded-full border-4 border-gray-200 shadow-sm">
                            <div
                                class="absolute bottom-0 right-0 bg-blue-500 text-white rounded-full w-8 h-8 flex items-center justify-center cursor-pointer hover:bg-blue-600 transition shadow-md"
                                title="基于邮箱的 Cravatar 头像">
                                <i class="fas fa-info-circle text-sm"></i>
                            </div>
                        </div>
                        <div class="flex-1">
                            <h3 class="text-2xl font-semibold text-gray-800">{{ user.nickname }}</h3>
                            <p class="text-gray-500 text-base mt-1">@{{ user.username }}</p>
                            <div class="mt-3 flex items-center space-x-4">
                            <span class="inline-flex items-center text-sm text-gray-600">
                                <i class="fas fa-envelope mr-2 text-gray-400"></i>
                                {{ user.email }}
                            </span>
                            </div>
                            <div class="mt-3 flex items-center space-x-2">
                            <span class="text-xs text-gray-500">
                                <i class="fas fa-image mr-1"></i>头像由
                            </span>
                                <a href="https://cn.cravatar.com" target="_blank"
                                   class="text-xs text-blue-600 hover:text-blue-700 hover:underline">
                                    Cravatar
                                </a>
                                <span class="text-gray-300">|</span>
                                <a href="https://cn.cravatar.com" target="_blank"
                                   class="text-xs text-blue-600 hover:text-blue-700 inline-flex items-center">
                                    <i class="fas fa-edit mr-1"></i>修改头像
                                </a>
                            </div>
                        </div>
                    </div>

                    <hr class="my-6">

                    <!-- 详细信息 -->
                    <div class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">用户名</label>
                                <div class="px-4 py-3 bg-gray-50 rounded-lg text-gray-700">{{ user.username }}</div>
                                <p class="text-xs text-gray-500 mt-1">用户名不可修改</p>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">昵称</label>
                                <input type="text" value="{{ user.nickname }}"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">邮箱</label>
                                <div class="flex items-center">
                                    <input type="email" value="{{ user.email }}"
                                           class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                    {% if user.email_verified_at %}
                                        <span class="ml-2 px-3 py-1 text-xs bg-green-100 text-green-800 rounded-full">
                                        <i class="fas fa-check-circle mr-1"></i>已验证
                                    </span>
                                    {% else %}
                                        <button
                                            class="ml-2 px-3 py-1 text-xs bg-yellow-100 text-yellow-800 rounded-full hover:bg-yellow-200">
                                            验证邮箱
                                        </button>
                                    {% endif %}
                                </div>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">手机</label>
                                <input type="tel" value="{{ user.mobile }}" placeholder="请输入手机号"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">等级</label>
                                <div class="px-4 py-3 bg-gray-50 rounded-lg text-gray-700">LV.{{ user.level }}</div>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">积分</label>
                                <div class="px-4 py-3 bg-gray-50 rounded-lg text-gray-700">{{ user.score }}</div>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">账户状态</label>
                                <div class="px-4 py-3 bg-gray-50 rounded-lg">
                                    {% if user.status == 0 %}
                                        <span class="text-yellow-600">未激活</span>
                                    {% elseif user.status == 1 %}
                                        <span class="text-green-600">正常</span>
                                    {% elseif user.status == 2 %}
                                        <span class="text-red-600">已禁用</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">注册时间</label>
                                <div
                                    class="px-4 py-3 bg-gray-50 rounded-lg text-gray-700">{{ user.join_time|local_date('Y-m-d H:i:s') }}</div>
                            </div>

                            {% if user.last_time %}
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">最后登录</label>
                                    <div
                                        class="px-4 py-3 bg-gray-50 rounded-lg text-gray-700">{{ user.last_time|local_date('Y-m-d H:i:s') }}</div>
                                </div>
                            {% endif %}
                        </div>

                        <div class="flex justify-end space-x-4 pt-4">
                            <button class="px-6 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400">
                                重置
                            </button>
                            <button class="px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
                                保存修改
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 账号绑定标签页 -->
            <div id="content-oauth" class="tab-content hidden">
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-xl font-semibold mb-4">第三方账号绑定</h2>
                    <p class="text-gray-600 mb-6">绑定第三方账号后，您可以使用这些账号快速登录</p>

                    <div class="space-y-4">
                        {% for providerKey, providerInfo in supportedProviders %}
                            {% if providerInfo.enabled %}
                                {% set isBound = false %}
                                {% set binding = null %}
                                {% for b in bindings %}
                                    {% if b.provider == providerKey %}
                                        {% set isBound = true %}
                                        {% set binding = b %}
                                    {% endif %}
                                {% endfor %}

                                <div
                                    class="flex items-center justify-between p-4 border rounded-lg hover:bg-gray-50 transition">
                                    <div class="flex items-center space-x-4">
                                        {% if providerKey == 'wind' %}
                                            <div class="w-12 h-12 flex items-center justify-center rounded-full"
                                                 style="background-color: {{ providerInfo.color }}20;">
                                                <span class="font-bold"
                                                      style="color: {{ providerInfo.color }}; font-size: 14px;">Wind</span>
                                            </div>
                                        {% else %}
                                            <i class="{{ providerInfo.icon }} text-3xl"
                                               style="color: {{ providerInfo.color }}"></i>
                                        {% endif %}
                                        <div>
                                            <p class="font-medium text-lg">{{ providerInfo.name }}</p>
                                            {% if isBound and binding %}
                                                <p class="text-sm text-green-600">
                                                    <i class="fas fa-check-circle mr-1"></i>
                                                    已绑定: {{ binding.provider_username ?? binding.provider_email ?? binding.provider_user_id }}
                                                </p>
                                            {% else %}
                                                <p class="text-sm text-gray-500">未绑定</p>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div>
                                        {% if isBound %}
                                            <button
                                                onclick="unbindOAuth('{{ providerKey }}')"
                                                class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition">
                                                <i class="fas fa-unlink mr-1"></i>解绑
                                            </button>
                                        {% else %}
                                            <a
                                                href="/oauth/{{ providerKey }}/redirect"
                                                data-no-pjax
                                                class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 inline-block transition">
                                                <i class="fas fa-link mr-1"></i>绑定
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- 安全设置标签页 -->
            <div id="content-security" class="tab-content hidden">
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-xl font-semibold mb-6">安全设置</h2>

                    <!-- 修改密码 -->
                    <div class="mb-8">
                        <h3 class="text-lg font-medium mb-4">修改密码</h3>
                        <div class="space-y-4 max-w-md">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">当前密码</label>
                                <input type="password" placeholder="请输入当前密码"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">新密码</label>
                                <input type="password" placeholder="请输入新密码（至少6位）"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">确认新密码</label>
                                <input type="password" placeholder="请再次输入新密码"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            </div>
                            <button class="px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
                                修改密码
                            </button>
                        </div>
                    </div>

                    <hr class="my-8">

                    <!-- 登录设备 -->
                    <div>
                        <h3 class="text-lg font-medium mb-4">登录设备</h3>
                        <div class="text-gray-600 text-sm">
                            <p>此功能正在开发中...</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 偏好设置标签页 -->
            <div id="content-preferences" class="tab-content hidden">
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-xl font-semibold mb-6">偏好设置</h2>

                    <div class="space-y-6">
                        <!-- 通知设置 -->
                        <div>
                            <h3 class="text-lg font-medium mb-4">通知偏好</h3>
                            <div class="space-y-3">
                                <label class="flex items-center">
                                    <input type="checkbox" checked
                                           class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                                    <span class="ml-3 text-gray-700">接收评论通知</span>
                                </label>
                                <label class="flex items-center">
                                    <input type="checkbox" checked
                                           class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                                    <span class="ml-3 text-gray-700">接收系统通知</span>
                                </label>
                                <label class="flex items-center">
                                    <input type="checkbox"
                                           class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                                    <span class="ml-3 text-gray-700">接收营销邮件</span>
                                </label>
                            </div>
                        </div>

                        <hr>

                        <!-- 界面设置 -->
                        <div>
                            <h3 class="text-lg font-medium mb-4">界面设置</h3>
                            <div class="space-y-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">语言</label>
                                    <select
                                        class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                        <option value="zh-CN" selected>简体中文</option>
                                        <option value="en-US">English</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="flex justify-end space-x-4 pt-4">
                            <button class="px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
                                保存设置
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .tab-button.active {
            border-color: #3b82f6;
            color: #3b82f6;
        }

        .tab-button:not(.active):hover {
            border-color: #d1d5db;
            color: #4b5563;
        }
    </style>

    <script>
        function switchTab(tabName) {
            // 隐藏所有内容
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.add('hidden');
            });

            // 移除所有标签的active状态
            document.querySelectorAll('.tab-button').forEach(button => {
                button.classList.remove('active', 'border-blue-500', 'text-blue-600');
                button.classList.add('border-transparent', 'text-gray-500');
            });

            // 显示当前内容
            document.getElementById('content-' + tabName).classList.remove('hidden');

            // 激活当前标签
            const activeButton = document.getElementById('tab-' + tabName);
            activeButton.classList.add('active', 'border-blue-500', 'text-blue-600');
            activeButton.classList.remove('border-transparent', 'text-gray-500');
        }

        function unbindOAuth(provider) {
            if (window.Swal) {
                Swal.fire({
                    title: '确认解绑？',
                    text: '您确定要解绑 ' + provider + ' 账号吗？',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: '确定',
                    cancelButtonText: '取消',
                    confirmButtonColor: '#ef4444',
                    cancelButtonColor: '#6b7280'
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch('/oauth/' + provider + '/unbind', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.code === 0) {
                                    Swal.fire({
                                        icon: 'success',
                                        title: '解绑成功',
                                        showConfirmButton: false,
                                        timer: 1500
                                    }).then(() => {
                                        location.reload();
                                    });
                                } else {
                                    Swal.fire('Error', '解绑失败: ' + data.msg, 'error');
                                }
                            })
                            .catch(error => {
                                console.error('Error:', error);
                                Swal.fire('Error', '解绑失败', 'error');
                            });
                    }
                });
            } else {
                if (!confirm('确定要解绑 ' + provider + ' 账号吗？')) {
                    return;
                }

                fetch('/oauth/' + provider + '/unbind', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.code === 0) {
                            alert('解绑成功');
                            location.reload();
                        } else {
                            alert('解绑失败: ' + data.msg);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('解绑失败');
                    });
            }
        }
    </script>
{% endblock %}
