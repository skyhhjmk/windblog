{% extends "base.html.twig" %}

{% block title %}重置密码 - {{ page_title|default('WindBlog') }}{% endblock %}

{% block content %}
    <div class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900 dark:text-gray-100">设置新密码</h2>
            </div>

            <form class="mt-8 space-y-6" id="resetForm">
                <input type="hidden" name="_token" value="{{ csrf_token|default('') }}">
                <input type="hidden" name="token" value="{{ token|default('') }}">

                <div class="rounded-md shadow-sm space-y-4">
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">新密码
                            <span
                                class="text-red-500">*</span></label>
                        <input id="password" name="password" type="password" required
                               class="mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 placeholder-gray-500 dark:placeholder-gray-400 text-gray-900 dark:text-gray-100 dark:bg-gray-700 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                               placeholder="至少6个字符">
                    </div>
                    <div>
                        <label for="password_confirm"
                               class="block text-sm font-medium text-gray-700 dark:text-gray-300">确认新密码 <span
                                class="text-red-500">*</span></label>
                        <input id="password_confirm" name="password_confirm" type="password" required
                               class="mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 placeholder-gray-500 dark:placeholder-gray-400 text-gray-900 dark:text-gray-100 dark:bg-gray-700 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                               placeholder="再次输入新密码">
                    </div>
                </div>

                <div>
                    <button type="submit" id="submitBtn"
                            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-3"><i class="fas fa-key"></i></span>
                        重置密码
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.getElementById('resetForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const submitBtn = document.getElementById('submitBtn');
            const formData = new FormData(this);
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> 提交中...';
            try {
                const resp = await fetch('/user/reset-password', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                    body: new URLSearchParams(formData)
                });
                const result = await resp.json();
                if (result.code === 0) {
                    Swal.fire({
                        icon: 'success',
                        title: '成功',
                        text: result.msg || '密码已重置',
                        confirmButtonText: '去登录'
                    }).then(() => {
                        window.location.href = '/user/login';
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: '失败',
                        text: result.msg || '请稍后重试',
                        confirmButtonText: '确定'
                    });
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<span class="absolute left-0 inset-y-0 flex items-center pl-3"><i class="fas fa-key"></i></span>重置密码';
                }
            } catch (_) {
                Swal.fire({icon: 'error', title: '网络错误', text: '请稍后重试', confirmButtonText: '确定'});
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<span class="absolute left-0 inset-y-0 flex items-center pl-3"><i class="fas fa-key"></i></span>重置密码';
            }
        });
    </script>
{% endblock %}
