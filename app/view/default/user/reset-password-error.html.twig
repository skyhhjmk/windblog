{% extends "base.html.twig" %}

{% block title %}重置密码 - {{ page_title|default('WindBlog') }}{% endblock %}

{% block content %}
    <div class="min-h-[50vh] flex items-center justify-center py-16">
        <div class="max-w-lg w-full">
            <div class="bg-white shadow rounded p-8">
                <div class="text-center">
                    <i class="fas fa-exclamation-triangle text-red-500 text-4xl"></i>
                    <h2 class="mt-4 text-2xl font-bold text-gray-800">链接不可用</h2>
                    <p class="mt-2 text-gray-600">{{ message|default('重置链接无效或已过期') }}</p>
                    <div class="mt-6">
                        <a href="/user/forgot-password" class="text-blue-600 hover:text-blue-700">重新申请重置密码</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
