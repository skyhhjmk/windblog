<title>{{ page_title|default('全部标签') }}</title>
<div id="pjax-container">
<!-- PJAX 隐藏侧栏片段 -->
<div id="pjax-sidebar-html" style="display:none">
    {% if sidebar is defined and sidebar.widgets is defined %}
        {% for widget in sidebar.widgets %}
            {% if widget.enabled and widget.html is defined %}
                {{ widget.html|raw }}
            {% endif %}
        {% endfor %}
    {% endif %}
</div>

<div class="max-w-full mx-auto px-4">
    <div class="text-center mb-8 sm:mb-12 animate-fade-in-down">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-800 mb-3 sm:mb-4">
            <i class="fas fa-tags text-blue-600 mr-3"></i>
            全部标签
        </h1>
    </div>

    {% if tags|length > 0 %}
        <div class="flex flex-wrap gap-3">
            {% for t in tags %}
                <a href="/tag/{{ t.slug }}.html" class="inline-flex items中心 bg-white rounded-full shadow px-4 py-2 hover:shadow-lg transition group">
                    <span class="text-gray-800 group-hover:text-blue-600 font-medium">{{ t.name }}</span>
                    <span class="ml-2 text-xs text-blue-700 bg-blue-50 px-2 py-0.5 rounded-full">{{ t.count }}</span>
                </a>
            {% endfor %}
        </div>
    {% else %}
        <div class="bg-white rounded-2xl shadow p-8 text-center text-gray-500">暂无标签</div>
    {% endif %}
</div>

<script>
(function () {
    function injectSidebar() {
        var t = document.getElementById('pjax-sidebar-html');
        var c = document.getElementById('sidebar-container');
        if (t && c) { c.innerHTML = t.innerHTML || ''; }
    }
    injectSidebar();
    document.addEventListener('page:ready', injectSidebar);
})();
</script>
</div>