{% extends 'base.html.twig' %}

{% block title %}{{ page_title|default('全部标签') }}{% endblock %}

{% block content %}
    <div class="max-w-full mx-auto px-4">
        {# 面包屑导航 #}
        {% include 'components/breadcrumb.html.twig' %}

        <div class="text-center mb-8 sm:mb-12 fade-in-on-scroll no-animation" data-animation-delay="0">
            <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-800 mb-3 sm:mb-4">
                <i class="fas fa-tags text-blue-600 mr-3"></i>
                全部标签
            </h1>
        </div>

        {% if tags|length > 0 %}
            <div class="flex flex-wrap gap-3">
                {% for t in tags %}
                    <a href="/tag/{{ t.slug }}.html"
                       class="inline-flex items-center bg-white rounded-full shadow px-4 py-2 hover:shadow-lg transition group">
                        <span class="text-gray-800 group-hover:text-blue-600 font-medium">{{ t.name }}</span>
                        <span
                            class="ml-2 text-xs text-blue-700 bg-blue-50 px-2 py-0.5 rounded-full">{{ t.count }}</span>
                    </a>
                {% endfor %}
            </div>
        {% else %}
            <div class="bg-white rounded-2xl shadow p-8 text-center text-gray-500">暂无标签</div>
        {% endif %}
    </div>
{% endblock %}
