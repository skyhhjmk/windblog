{% extends 'base.html.twig' %}

{% block title %}{{ page_title|default('全部分类') }}{% endblock %}

{% block content %}
    <div class="max-w-full mx-auto px-4">
        {# 面包屑导航 #}
        {% include 'components/breadcrumb.html.twig' %}

        <div class="text-center mb-8 sm:mb-12 fade-in-on-scroll no-animation" data-animation-delay="0">
            <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-800 mb-3 sm:mb-4">
                <i class="fas fa-folder-tree text-blue-600 mr-3"></i>
                全部分类
            </h1>
        </div>

        {% if categories|length > 0 %}
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
                {% for c in categories %}
                    <a href="/category/{{ c.slug }}.html"
                       class="block bg-white rounded-2xl shadow hover:shadow-xl transition p-5 group">
                        <div class="flex items-center justify-between">
                            <div
                                class="text-lg font-semibold text-gray-800 group-hover:text-blue-600">{{ c.name }}</div>
                            <div class="text-sm text-blue-700 bg-blue-50 px-2 py-0.5 rounded-full">
                                {{ c.count }} 篇
                            </div>
                        </div>
                        {% if c.description %}
                            <p class="mt-2 text-gray-500 text-sm line-clamp-2">{{ c.description }}</p>
                        {% endif %}
                    </a>
                {% endfor %}
            </div>
        {% else %}
            <div class="bg-white rounded-2xl shadow p-8 text-center text-gray-500">暂无分类</div>
        {% endif %}
    </div>
{% endblock %}
