{% extends "base.html.twig" %}

{% block title %}Forgot Password - {{ page_title|default('WindBlog') }}{% endblock %}

{% block content %}
    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full tui-box" data-title="RECOVERY">
            <div class="text-center mb-8">
                <h2 class="text-2xl font-bold">
                    <span class="text-green-500">âžœ</span> Reset Password
                </h2>
                <p class="mt-2 text-sm text-gray-500 font-mono">
                    We will send a reset link to your email.
                </p>
            </div>

            <form class="space-y-6 font-mono" id="forgotForm">
                <input type="hidden" name="_token" value="" data-csrf-placeholder="true">
                <div>
                    <label for="email" class="block text-sm text-gray-500 mb-1">
                        Email <span class="text-red-500">*</span>
                    </label>
                    <input id="email" name="email" type="email" required
                           class="w-full bg-gray-800 border border-gray-600 p-2 text-white focus:border-blue-500 outline-none"
                           placeholder="Enter registered email">
                </div>

                <!-- Captcha -->
                <div id="captchaWrapper" class="space-y-2"></div>

                <div>
                    <button type="submit" id="submitBtn"
                            class="w-full flex justify-center py-2 px-4 border border-blue-500 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
                        [Send Reset Link]
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        (async function () {
            try {
                const res = await fetch('/captcha/config');
                const json = await res.json();
                const c = json && json.data ? json.data : {enabled: false};
                const wrap = document.getElementById('captchaWrapper');
                if (!wrap || !c.enabled) return;

                if (c.type === 'turnstile' && c.sitekey) {
                    const div = document.createElement('div');
                    div.className = 'cf-turnstile';
                    div.setAttribute('data-sitekey', c.sitekey);
                    wrap.appendChild(div);
                    const s = document.createElement('script');
                    s.src = 'https://challenges.cloudflare.com/turnstile/v0/api.js';
                    s.async = true;
                    s.defer = true;
                    document.body.appendChild(s);
                } else if (c.type === 'image') {
                    const box = document.createElement('div');
                    box.className = 'flex items-center space-x-2';
                    box.innerHTML = `
                        <input name="captcha" placeholder="Captcha" class="mt-1 flex-1 bg-gray-800 border border-gray-600 p-2 text-white focus:border-blue-500 outline-none" />
                        <img id="captchaImg" src="/captcha/image?ts=${Date.now()}" alt="Captcha" class="h-10 w-28 cursor-pointer border border-gray-600" title="Click to refresh" />
                    `;
                    wrap.appendChild(box);
                    box.querySelector('#captchaImg').addEventListener('click', function () {
                        this.src = '/captcha/image?ts=' + Date.now();
                    });
                }
            } catch (_) {
            }
        })();

        document.getElementById('forgotForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const submitBtn = document.getElementById('submitBtn');
            const formData = new FormData(this);
            submitBtn.disabled = true;
            submitBtn.innerHTML = 'Sending...';
            try {
                const resp = await fetch('/user/forgot-password', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                    body: new URLSearchParams(formData)
                });
                const result = await resp.json();
                if (result.code === 0) {
                    if (window.Swal) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Sent',
                            text: result.msg || 'Check your email',
                            background: '#1e1e1e',
                            color: '#abb2bf'
                        });
                    } else {
                        alert(result.msg || 'Check your email');
                    }
                } else {
                    if (window.Swal) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Failed',
                            text: result.msg || 'Try again later',
                            background: '#1e1e1e',
                            color: '#abb2bf'
                        });
                    } else {
                        alert(result.msg || 'Failed');
                    }
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '[Send Reset Link]';
                }
            } catch (err) {
                alert('Network Error');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '[Send Reset Link]';
            }
        });
    </script>
{% endblock %}
