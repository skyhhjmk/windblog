{% extends "base.html.twig" %}

{% block title %}Reset Password - {{ page_title|default('WindBlog') }}{% endblock %}

{% block content %}
    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full tui-box" data-title="RESET PASSWORD">
            <div class="text-center mb-8">
                <h2 class="text-2xl font-bold">
                    <span class="text-green-500">âžœ</span> Set New Password
                </h2>
            </div>

            <form class="space-y-6 font-mono" id="resetForm">
                <input type="hidden" name="_token" value="{{ csrf_token|default('') }}">
                <input type="hidden" name="token" value="{{ token|default('') }}">

                <div class="space-y-4">
                    <div>
                        <label for="password" class="block text-sm text-gray-500 mb-1">
                            New Password <span class="text-red-500">*</span>
                        </label>
                        <input id="password" name="password" type="password" required
                               class="w-full bg-gray-800 border border-gray-600 p-2 text-white focus:border-blue-500 outline-none"
                               placeholder="Min 6 chars">
                    </div>
                    <div>
                        <label for="password_confirm" class="block text-sm text-gray-500 mb-1">
                            Confirm Password <span class="text-red-500">*</span>
                        </label>
                        <input id="password_confirm" name="password_confirm" type="password" required
                               class="w-full bg-gray-800 border border-gray-600 p-2 text-white focus:border-blue-500 outline-none"
                               placeholder="Re-enter new password">
                    </div>
                </div>

                <div>
                    <button type="submit" id="submitBtn"
                            class="w-full flex justify-center py-2 px-4 border border-blue-500 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
                        [Reset Password]
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.getElementById('resetForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const submitBtn = document.getElementById('submitBtn');
            const formData = new FormData(this);
            submitBtn.disabled = true;
            submitBtn.innerHTML = 'Submitting...';
            try {
                const resp = await fetch('/user/reset-password', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                    body: new URLSearchParams(formData)
                });
                const result = await resp.json();
                if (result.code === 0) {
                    if (window.Swal) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: result.msg || 'Password reset successfully',
                            confirmButtonText: 'Go to Login',
                            background: '#1e1e1e',
                            color: '#abb2bf'
                        }).then(() => {
                            window.location.href = '/user/login';
                        });
                    } else {
                        alert(result.msg || 'Password reset successfully');
                        window.location.href = '/user/login';
                    }
                } else {
                    if (window.Swal) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Failed',
                            text: result.msg || 'Try again later',
                            background: '#1e1e1e',
                            color: '#abb2bf'
                        });
                    } else {
                        alert(result.msg || 'Failed');
                    }
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '[Reset Password]';
                }
            } catch (_) {
                alert('Network Error');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '[Reset Password]';
            }
        });
    </script>
{% endblock %}
