{% extends "base.html.twig" %}

{% block title %}Login - {{ page_title|default('WindBlog') }}{% endblock %}

{% block content %}
    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full tui-box" data-title="LOGIN">
            <div class="text-center mb-8">
                <h2 class="text-2xl font-bold">
                    <span class="text-green-500">âžœ</span> User Login
                </h2>
                <p class="mt-2 text-sm text-gray-500 font-mono">
                    New user?
                    <a href="/user/register" class="text-blue-500 hover:underline">
                        [Register Here]
                    </a>
                </p>
            </div>

            <form class="space-y-6 font-mono" id="loginForm">
                <input type="hidden" name="_token" value="{{ csrf_token|default('') }}">
                <div class="space-y-4">
                    <div>
                        <label for="username" class="block text-sm text-gray-500 mb-1">
                            Username/Email <span class="text-red-500">*</span>
                        </label>
                        <input id="username" name="username" type="text" required
                               class="w-full bg-gray-800 border border-gray-600 p-2 text-white focus:border-blue-500 outline-none"
                               placeholder="Enter username or email">
                    </div>
                    <div>
                        <label for="password" class="block text-sm text-gray-500 mb-1">
                            Password <span class="text-red-500">*</span>
                        </label>
                        <input id="password" name="password" type="password" required
                               class="w-full bg-gray-800 border border-gray-600 p-2 text-white focus:border-blue-500 outline-none"
                               placeholder="Enter password">
                    </div>
                </div>

                <div class="flex items-center justify-between text-sm">
                    <div class="flex items-center">
                        <input id="remember" name="remember" type="checkbox" value="1"
                               class="h-4 w-4 bg-gray-800 border-gray-600 rounded focus:ring-blue-500">
                        <label for="remember" class="ml-2 block text-gray-400">
                            Remember me
                        </label>
                    </div>

                    <div>
                        <a href="#" class="text-blue-500 hover:underline"
                           onclick="resendActivation(); return false;">
                            [Resend Activation]
                        </a>
                    </div>
                </div>

                <!-- Captcha -->
                <div id="captchaWrapper" class="space-y-2"></div>

                <div>
                    <button type="submit" id="submitBtn"
                            class="w-full flex justify-center py-2 px-4 border border-blue-500 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
                        [Login]
                    </button>
                </div>
            </form>

            <!-- OAuth -->
            {% set hasEnabledProvider = false %}
            {% set hasWeChatProvider = false %}
            {% if oauthProviders is defined %}
                {% for provider, providerInfo in oauthProviders %}
                    {% if providerInfo.enabled %}
                        {% set hasEnabledProvider = true %}
                        {% if provider == 'wechat' %}
                            {% set hasWeChatProvider = true %}
                        {% endif %}
                    {% endif %}
                {% endfor %}
            {% endif %}

            {% if hasEnabledProvider %}
                <div class="mt-6">
                    <div class="relative">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-600"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-[#1e1e1e] text-gray-500">Or login with</span>
                        </div>
                    </div>

                    <!-- WeChat QR -->
                    {% if hasWeChatProvider %}
                        <div id="wechat_login_container" class="mt-6 flex justify-center"
                             style="min-height: 300px;"></div>
                    {% endif %}

                    <div class="mt-6 grid grid-cols-3 gap-3">
                        {% for provider, providerInfo in oauthProviders %}
                            {% if providerInfo.enabled and provider != 'wechat' %}
                                <a href="/oauth/{{ provider }}/redirect"
                                   data-no-pjax
                                   class="w-full inline-flex justify-center py-2 px-4 border border-gray-600 bg-gray-800 text-sm font-medium text-gray-300 hover:bg-gray-700 font-mono"
                                   title="Login with {{ providerInfo.name }}">
                                    {% if provider == 'wind' %}
                                        <span style="color: {{ providerInfo.color }}; font-weight: 600;">Wind</span>
                                    {% else %}
                                        <i class="{{ providerInfo.icon }} text-xl"
                                           style="color: {{ providerInfo.color }}"></i>
                                    {% endif %}
                                </a>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- WeChat JS -->
    {% if hasWeChatProvider %}
        <script src="https://res.wx.qq.com/connect/zh_CN/htmledition/js/wxLogin.js"></script>
        <script>
            {% if oauthProviders.wechat is defined and oauthProviders.wechat.enabled %}
            new WxLogin({
                self_redirect: false,
                id: "wechat_login_container",
                appid: "{{ oauthProviders.wechat.client_id }}",
                scope: "snsapi_login",
                redirect_uri: encodeURIComponent("{{ app.request.getScheme() }}://{{ app.request.getHost() }}/oauth/wechat/callback"),
                state: "{{ oauthState|default('') }}",
                style: "black",
                href: ""
            });
            {% endif %}
        </script>
    {% endif %}

    <script>
        (async function () {
            try {
                const res = await fetch('/captcha/config');
                const json = await res.json();
                const c = json && json.data ? json.data : {enabled: false};
                const wrap = document.getElementById('captchaWrapper');
                if (!wrap || !c.enabled) return;

                if (c.type === 'turnstile' && c.sitekey) {
                    const div = document.createElement('div');
                    div.className = 'cf-turnstile';
                    div.setAttribute('data-sitekey', c.sitekey);
                    wrap.appendChild(div);
                    const s = document.createElement('script');
                    s.src = 'https://challenges.cloudflare.com/turnstile/v0/api.js';
                    s.async = true;
                    s.defer = true;
                    document.body.appendChild(s);
                } else if (c.type === 'image') {
                    const box = document.createElement('div');
                    box.className = 'flex items-center space-x-2';
                    box.innerHTML = `
                        <input name="captcha" placeholder="Captcha" class="mt-1 flex-1 bg-gray-800 border border-gray-600 p-2 text-white focus:border-blue-500 outline-none" />
                        <img id="captchaImg" src="/captcha/image?ts=${Date.now()}" alt="Captcha" class="h-10 w-28 cursor-pointer border border-gray-600" title="Click to refresh" />
                    `;
                    wrap.appendChild(box);
                    box.querySelector('#captchaImg').addEventListener('click', function () {
                        this.src = '/captcha/image?ts=' + Date.now();
                    });
                }
            } catch (e) {
            }
        })();

        document.getElementById('loginForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const submitBtn = document.getElementById('submitBtn');
            const formData = new FormData(this);
            submitBtn.disabled = true;
            submitBtn.innerHTML = 'Logging in...';

            try {
                const response = await fetch('/user/login', {
                    method: 'POST',
                    credentials: 'same-origin',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'X-CSRF-TOKEN': '{{ csrf_token|default('') }}',
                    },
                    body: new URLSearchParams(formData)
                });
                const result = await response.json();

                if (result.code === 0) {
                    if (window.Swal) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: result.msg || 'Welcome back!',
                            timer: 1500,
                            showConfirmButton: false,
                            background: '#1e1e1e',
                            color: '#abb2bf'
                        }).then(() => {
                            window.location.href = '/';
                        });
                    } else {
                        alert('Login Success');
                        window.location.href = '/';
                    }
                } else {
                    if (window.Swal) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Failed',
                            text: result.msg || 'Unknown error',
                            background: '#1e1e1e',
                            color: '#abb2bf'
                        });
                    } else {
                        alert(result.msg || 'Login Failed');
                    }
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '[Login]';
                }
            } catch (error) {
                alert('Network Error');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '[Login]';
            }
        });

        async function resendActivation() {
            // Simplified for TUI, assuming Swal is available or fallback to prompt
            let email = '';
            if (window.Swal) {
                const {value} = await Swal.fire({
                    title: 'Resend Activation',
                    input: 'email',
                    inputLabel: 'Enter your email',
                    background: '#1e1e1e',
                    color: '#abb2bf',
                    confirmButtonColor: '#3b82f6'
                });
                email = value;
            } else {
                email = prompt('Enter your email for activation:');
            }

            if (email) {
                fetch('/user/resend-activation', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                    body: new URLSearchParams({email})
                }).then(r => r.json()).then(res => {
                    alert(res.msg);
                });
            }
        }
    </script>
{% endblock %}
