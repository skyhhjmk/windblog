{% extends "base.html.twig" %}

{% block title %}Register - {{ page_title|default('WindBlog') }}{% endblock %}

{% block content %}
    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full tui-box" data-title="REGISTER">
            <div class="text-center mb-8">
                <h2 class="text-2xl font-bold">
                    <span class="text-green-500">âžœ</span> Create Account
                </h2>
                <p class="mt-2 text-sm text-gray-500 font-mono">
                    Or
                    <a href="/user/login" class="text-blue-500 hover:underline">
                        [Login Existing Account]
                    </a>
                </p>
            </div>

            <form class="space-y-6 font-mono" id="registerForm" method="post">
                <input type="hidden" name="_token" value="" data-csrf-placeholder="true">
                <div class="space-y-4">
                    <div>
                        <label for="username" class="block text-sm text-gray-500 mb-1">
                            Username <span class="text-red-500">*</span>
                        </label>
                        <input id="username" name="username" type="text" required
                               class="w-full bg-gray-800 border border-gray-600 p-2 text-white focus:border-blue-500 outline-none"
                               placeholder="3-32 chars, letters/nums/_">
                    </div>
                    <div>
                        <label for="email" class="block text-sm text-gray-500 mb-1">
                            Email <span class="text-red-500">*</span>
                        </label>
                        <input id="email" name="email" type="email" required
                               class="w-full bg-gray-800 border border-gray-600 p-2 text-white focus:border-blue-500 outline-none"
                               placeholder="For activation & recovery">
                    </div>
                    <div>
                        <label for="nickname" class="block text-sm text-gray-500 mb-1">
                            Nickname
                        </label>
                        <input id="nickname" name="nickname" type="text"
                               class="w-full bg-gray-800 border border-gray-600 p-2 text-white focus:border-blue-500 outline-none"
                               placeholder="Optional, defaults to username">
                    </div>
                    <div>
                        <label for="password" class="block text-sm text-gray-500 mb-1">
                            Password <span class="text-red-500">*</span>
                        </label>
                        <input id="password" name="password" type="password" required
                               class="w-full bg-gray-800 border border-gray-600 p-2 text-white focus:border-blue-500 outline-none"
                               placeholder="Min 6 chars">
                    </div>
                    <div>
                        <label for="password_confirm" class="block text-sm text-gray-500 mb-1">
                            Confirm Password <span class="text-red-500">*</span>
                        </label>
                        <input id="password_confirm" name="password_confirm" type="password" required
                               class="w-full bg-gray-800 border border-gray-600 p-2 text-white focus:border-blue-500 outline-none"
                               placeholder="Re-enter password">
                    </div>
                </div>

                <!-- Captcha -->
                <div id="captchaWrapper" class="space-y-2"></div>

                <div>
                    <button type="submit" id="submitBtn"
                            class="w-full flex justify-center py-2 px-4 border border-blue-500 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
                        [Register]
                    </button>
                </div>

                <div class="text-center text-xs text-gray-500">
                    <p>By registering, you agree to our Terms and Privacy Policy.</p>
                </div>
            </form>

            <!-- OAuth -->
            {% set hasEnabledProvider = false %}
            {% if oauthProviders is defined %}
                {% for provider, providerInfo in oauthProviders %}
                    {% if providerInfo.enabled %}
                        {% set hasEnabledProvider = true %}
                    {% endif %}
                {% endfor %}
            {% endif %}

            {% if hasEnabledProvider %}
                <div class="mt-6">
                    <div class="relative">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-600"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-[#1e1e1e] text-gray-500">Or register with</span>
                        </div>
                    </div>

                    <div class="mt-6 grid grid-cols-3 gap-3">
                        {% for provider, providerInfo in oauthProviders %}
                            {% if providerInfo.enabled %}
                                <a href="/oauth/{{ provider }}/redirect"
                                   data-no-pjax
                                   class="w-full inline-flex justify-center py-2 px-4 border border-gray-600 bg-gray-800 text-sm font-medium text-gray-300 hover:bg-gray-700 font-mono"
                                   title="Register with {{ providerInfo.name }}">
                                    {% if provider == 'wind' %}
                                        <span style="color: {{ providerInfo.color }}; font-weight: 600;">Wind</span>
                                    {% else %}
                                        <i class="{{ providerInfo.icon }} text-xl"
                                           style="color: {{ providerInfo.color }}"></i>
                                    {% endif %}
                                </a>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <script>
        (async function () {
            try {
                const res = await fetch('/captcha/config');
                const json = await res.json();
                const c = json && json.data ? json.data : {enabled: false};
                const wrap = document.getElementById('captchaWrapper');
                if (!wrap || !c.enabled) return;

                if (c.type === 'turnstile' && c.sitekey) {
                    const div = document.createElement('div');
                    div.className = 'cf-turnstile';
                    div.setAttribute('data-sitekey', c.sitekey);
                    wrap.appendChild(div);
                    const s = document.createElement('script');
                    s.src = 'https://challenges.cloudflare.com/turnstile/v0/api.js';
                    s.async = true;
                    s.defer = true;
                    document.body.appendChild(s);
                } else if (c.type === 'image') {
                    const box = document.createElement('div');
                    box.className = 'flex items-center space-x-2';
                    box.innerHTML = `
                        <input name="captcha" placeholder="Captcha" class="mt-1 flex-1 bg-gray-800 border border-gray-600 p-2 text-white focus:border-blue-500 outline-none" />
                        <img id="captchaImg" src="/captcha/image?ts=${Date.now()}" alt="Captcha" class="h-10 w-28 cursor-pointer border border-gray-600" title="Click to refresh" />
                    `;
                    wrap.appendChild(box);
                    box.querySelector('#captchaImg').addEventListener('click', function () {
                        this.src = '/captcha/image?ts=' + Date.now();
                    });
                }
            } catch (e) {
            }
        })();

        document.getElementById('registerForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const submitBtn = document.getElementById('submitBtn');
            const formData = new FormData(this);
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Registering...';

            try {
                const response = await fetch('/user/register', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                    body: new URLSearchParams(formData)
                });
                const result = await response.json();

                if (result.code === 0) {
                    if (window.Swal) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: result.msg || 'Activation email sent. Please check your inbox.',
                            confirmButtonText: 'Go to Login',
                            background: '#1e1e1e',
                            color: '#abb2bf'
                        }).then(() => {
                            window.location.href = '/user/login';
                        });
                    } else {
                        alert(result.msg || 'Registration Success. Please check email.');
                        window.location.href = '/user/login';
                    }
                } else {
                    if (window.Swal) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Failed',
                            text: result.msg || 'Unknown error',
                            background: '#1e1e1e',
                            color: '#abb2bf'
                        });
                    } else {
                        alert(result.msg || 'Registration Failed');
                    }
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '[Register]';
                }
            } catch (error) {
                alert('Network Error');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '[Register]';
            }
        });
    </script>
{% endblock %}
