{% extends "base.html.twig" %}

{% block title %}404 Not Found - {{ page_title|default('WindBlog') }}{% endblock %}

{% block content %}
    <div class="min-h-[60vh] flex items-center justify-center">
        <div class="tui-box max-w-lg w-full text-center font-mono" data-title="ERROR 404">
            <div class="mb-6">
                <span class="text-6xl text-red-500 font-bold">404</span>
            </div>
            <h2 class="text-2xl font-bold text-gray-300 mb-4">Page Not Found</h2>
            <p class="text-gray-500 mb-8">
                The requested URL was not found on this server.
            </p>
            <div class="space-y-4">
                <a href="/"
                   class="block w-full py-2 border border-green-500 text-green-500 hover:bg-green-900 hover:text-white transition-colors">
                    [Return Home]
                </a>
                <button onclick="history.back()"
                        class="block w-full py-2 border border-gray-600 text-gray-500 hover:bg-gray-800 hover:text-white transition-colors">
                    [Go Back]
                </button>
            </div>
        </div>
    </div>
{% endblock %}
