{% extends "base.html.twig" %}

{% block title %}403 Forbidden - {{ page_title|default('WindBlog') }}{% endblock %}

{% block content %}
    <div class="min-h-[60vh] flex items-center justify-center">
        <div class="tui-box max-w-lg w-full text-center font-mono" data-title="ERROR 403">
            <div class="mb-6">
                <span class="text-6xl text-yellow-500 font-bold">403</span>
            </div>
            <h2 class="text-2xl font-bold text-gray-300 mb-4">Access Denied</h2>
            <p class="text-gray-500 mb-8">
                You do not have permission to access this resource.
            </p>
            <div class="flex gap-4 justify-center">
                <a href="/"
                   class="px-6 py-2 border border-green-500 text-green-500 hover:bg-green-900 hover:text-white transition-colors">
                    [Return Home]
                </a>
                <button onclick="history.back()"
                        class="px-6 py-2 border border-gray-600 text-gray-500 hover:bg-gray-800 hover:text-white transition-colors">
                    [Go Back]
                </button>
            </div>
        </div>
    </div>
{% endblock %}
