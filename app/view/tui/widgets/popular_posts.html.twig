{% extends "widgets/base.html.twig" %}

{% block widget_content %}
    {% if popular_posts is defined and popular_posts is not empty %}
        <div class="space-y-2 font-mono text-sm">
            {% for post in popular_posts %}
                <a href="/post/{{ post.slug }}.html" class="block group hover:bg-gray-800 p-2 transition-colors">
                    <div class="text-gray-300 group-hover:text-yellow-400 mb-1 truncate">
                        â˜… {{ post.title }}
                    </div>
                    <div class="text-xs text-gray-500 pl-4">
                        Views: {{ post.views|default(0) }}
                    </div>
                </a>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-gray-500 text-sm italic font-mono">No popular posts found</div>
    {% endif %}
{% endblock %}
