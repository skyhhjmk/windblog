{% extends 'admin/base.html.twig' %}

{% block title %}编辑媒体文件{% endblock %}

{% block content %}
<div class="bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">编辑媒体文件</h1>
    
    <div class="mb-8">
        <div class="flex justify-center mb-4">
            {% if media.is_image %}
                <img src="{{ media.url }}" alt="{{ media.alt_text }}" title="{{ media.caption }}" 
                     class="max-w-full max-h-96 object-contain">
            {% elseif media.mime_type starts with 'video/' %}
                <video controls class="max-w-full max-h-96">
                    <source src="{{ media.url }}" type="{{ media.mime_type }}">
                    您的浏览器不支持视频播放。
                </video>
            {% elseif media.mime_type starts with 'audio/' %}
                <audio controls class="w-full">
                    <source src="{{ media.url }}" type="{{ media.mime_type }}">
                    您的浏览器不支持音频播放。
                </audio>
            {% else %}
                <div class="text-center p-6 bg-gray-100 rounded">
                    <p class="mb-2">文件类型: {{ media.mime_type }}</p>
                    <p class="mb-4">文件名: {{ media.original_name }}</p>
                    <a href="{{ media.url }}" target="_blank" 
                       class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        下载文件
                    </a>
                </div>
            {% endif %}
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <div class="bg-gray-100 p-3 rounded">
                <strong class="block text-sm text-gray-600">文件名</strong>
                <span>{{ media.original_name }}</span>
            </div>
            <div class="bg-gray-100 p-3 rounded">
                <strong class="block text-sm text-gray-600">文件大小</strong>
                <span>{{ (media.file_size / 1024) | round(2) }} KB</span>
            </div>
            <div class="bg-gray-100 p-3 rounded">
                <strong class="block text-sm text-gray-600">文件类型</strong>
                <span>{{ media.mime_type }}</span>
            </div>
            <div class="bg-gray-100 p-3 rounded">
                <strong class="block text-sm text-gray-600">上传时间</strong>
                <span>{{ media.created_at|date('Y-m-d H:i:s') }}</span>
            </div>
        </div>
    </div>
    
    <form id="editForm" class="space-y-6">
        <div>
            <label for="alt_text" class="block text-sm font-medium text-gray-700 mb-1">替代文本 (Alt Text)</label>
            <input type="text" id="alt_text" name="alt_text" value="{{ media.alt_text }}" placeholder="图片的替代文本描述"
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        
        <div>
            <label for="caption" class="block text-sm font-medium text-gray-700 mb-1">标题 (Caption)</label>
            <input type="text" id="caption" name="caption" value="{{ media.caption }}" placeholder="媒体文件的标题"
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        
        <div>
            <label for="description" class="block text-sm font-medium text-gray-700 mb-1">描述 (Description)</label>
            <textarea id="description" name="description" placeholder="媒体文件的详细描述"
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">{{ media.description }}</textarea>
        </div>
        
        <div class="flex justify-end space-x-4">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                保存更改
            </button>
            <a href="{{ path('admin.media.index') }}" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                返回媒体库
            </a>
        </div>
    </form>
    
    <div id="message" class="hidden mt-6 p-4 rounded"></div>
</div>

<script>
    document.getElementById('editForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const submitBtn = this.querySelector('button[type="submit"]');
        const originalBtnText = submitBtn.textContent;
        
        // 显示加载状态
        submitBtn.textContent = '保存中...';
        submitBtn.disabled = true;
        
        // 发送更新请求
        fetch('{{ path("admin.media.update", {"id": media.id}) }}', {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            const messageEl = document.getElementById('message');
            messageEl.classList.remove('hidden');
            
            if (data.code === 200) {
                messageEl.className = 'mt-6 p-4 rounded bg-green-100 text-green-700';
                messageEl.textContent = data.msg;
            } else {
                messageEl.className = 'mt-6 p-4 rounded bg-red-100 text-red-700';
                messageEl.textContent = data.msg;
            }
            
            // 恢复按钮状态
            submitBtn.textContent = originalBtnText;
            submitBtn.disabled = false;
            
            // 3秒后隐藏消息
            setTimeout(() => {
                messageEl.classList.add('hidden');
            }, 3000);
        })
        .catch(error => {
            const messageEl = document.getElementById('message');
            messageEl.classList.remove('hidden');
            messageEl.className = 'mt-6 p-4 rounded bg-red-100 text-red-700';
            messageEl.textContent = '保存过程中发生错误: ' + error.message;
            
            // 恢复按钮状态
            submitBtn.textContent = originalBtnText;
            submitBtn.disabled = false;
            
            // 3秒后隐藏消息
            setTimeout(() => {
                messageEl.classList.add('hidden');
            }, 3000);
        });
    });
</script>
{% endblock %}