{
  "name": "skyhhjmk/wind-cms",
  "type": "project",
  "keywords": [
    "windblog",
    "blog system",
    "webman application",
    "high performance"
  ],
  "homepage": "https://www.biliwind.com",
  "license": "MIT",
  "description": "A high-performance blog system based on Webman framework.",
  "authors": [
    {
      "name": "hhjmk",
      "email": "admin@biliwind.com",
      "homepage": "https://www.biliwind.com",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "admin@biliwind.com",
    "issues": "https://github.com/skyhhjmk/wind-cms/issues",
    "source": "https://github.com/skyhhjmk/wind-cms"
  },
  "require": {
    "php": ">=8.2",
    "workerman/webman-framework": "^2.1",
    "monolog/monolog": "^2.0",
    "twig/twig": "^3.21",
    "symfony/translation": "^7.3",
    "webman/database": "^2.1",
    "illuminate/events": "^12.30",
    "symfony/var-dumper": "^7.3",
    "webman/console": "^2.1",
    "webman/push": "^1.1",
    "webman/log": "^2.1",
    "workerman/crontab": "^1.0",
    "illuminate/pagination": "^12.30",
    "ext-fileinfo": "*",
    "ext-xmlreader": "*",
    "ext-dom": "*",
    "ext-libxml": "*",
    "ext-pdo": "*",
    "minishlink/web-push": "^9.0",
    "webman/redis": "^2.1",
    "league/html-to-markdown": "^5.1",
    "webman/admin": "*",
    "intervention/image": "*",
    "ext-gd": "*",
    "webman/rate-limiter": "^1.1",
    "league/commonmark": "^2.7",
    "overtrue/easy-sms": "^3.2",
    "phpmailer/phpmailer": "^6.10",
    "twig/cache-extra": "^3.21",
    "twig/string-extra": "^3.21",
    "twig/inky-extra": "^3.21",
    "vlucas/phpdotenv": "^5.6",
    "elasticsearch/elasticsearch": "^9.1",
    "guzzlehttp/guzzle": "^7.10",
    "php-amqplib/php-amqplib": "^3.7",
    "ext-curl": "*"
  },
  "suggest": {
    "ext-event": "For better performance. "
  },
  "autoload": {
    "psr-4": {
      "": "./",
      "app\\": "./app",
      "App\\": "./app",
      "app\\View\\Components\\": "./app/view/components"
    }
  },
  "scripts": {
    "post-package-install": [
      "support\\Plugin::install"
    ],
    "post-package-update": [
      "support\\Plugin::install"
    ],
    "pre-package-uninstall": [
      "support\\Plugin::uninstall"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "phpunit/phpunit": "^12.3",
    "xefi/faker-php": "^1.4"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
