{
  "name": "skyhhjmk/windblog",
  "type": "project",
  "keywords": [
    "windblog",
    "blog system",
    "webman application",
    "high performance"
  ],
  "homepage": "https://www.biliwind.com",
  "license": "BSD 3-Clause License",
  "description": "A high-performance blog system based on Webman framework.",
  "authors": [
    {
      "name": "skyhhjmk",
      "email": "admin@biliwind.com",
      "homepage": "https://www.biliwind.com",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "admin@biliwind.com",
    "issues": "https://github.com/skyhhjmk/windblog/issues",
    "source": "https://github.com/skyhhjmk/windblog"
  },
  "version": "2.5.2",
  "require": {
    "php": ">=8.4",
    "workerman/webman-framework": "^2.1",
    "monolog/monolog": "^2.10",
    "twig/twig": "^3.22",
    "webman/database": "^2.1",
    "illuminate/events": "^12.44",
    "symfony/var-dumper": "^7.4",
    "webman/console": "^2.1.10",
    "workerman/crontab": "^1.0",
    "illuminate/pagination": "^12.44",
    "webman/redis": "^2.1",
    "league/html-to-markdown": "^5.1",
    "webman/admin": "*",
    "league/commonmark": "^2.8",
    "phpmailer/phpmailer": "^6.12",
    "twig/cache-extra": "^3.22",
    "twig/string-extra": "^3.22",
    "twig/inky-extra": "^3.22",
    "vlucas/phpdotenv": "^5.6",
    "elasticsearch/elasticsearch": "^9.2",
    "guzzlehttp/guzzle": "^7.10",
    "php-amqplib/php-amqplib": "^3.7",
    "matthiasmullie/minify": "^1.3",
    "league/oauth2-client": "^2.9",
    "league/oauth2-github": "^3.1",
    "league/oauth2-google": "^4.0",
    "webman/event": "^1.0",
    "webman/log": "^2.1",
    "workerman/http-client": "^3.0",
    "robmorgan/phinx": "^0.16.10",
    "ezyang/htmlpurifier": "^4.19"
  },
  "suggest": {
    "ext-event": "For better performance. "
  },
  "autoload": {
    "psr-4": {
      "": "./",
      "app\\": "./app",
      "App\\": "./app"
    },
    "files": [
      "support/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-package-install": [
      "support\\Plugin::install"
    ],
    "post-package-update": [
      "support\\Plugin::install"
    ],
    "pre-package-uninstall": [
      "support\\Plugin::uninstall"
    ],
    "post-install-cmd": [
      "@php console system:post-update || true"
    ],
    "post-update-cmd": [
      "@php console system:post-update || true"
    ],
    "post-autoload-dump": [
      "@php -r \"echo 'Composer autoload dumped.'.PHP_EOL;\""
    ],
    "test": "phpunit",
    "test:unit": "phpunit --testsuite 'Test Suite'",
    "test:coverage": "phpunit --coverage-html coverage",
    "test:filter": "phpunit --filter",
    "analyse": "phpstan analyze",
    "cs:check": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix",
    "check": [
      "@cs:check",
      "@analyse",
      "@test"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "phpunit/phpunit": "^12.3",
    "friendsofphp/php-cs-fixer": "^3.64",
    "phpstan/phpstan": "^2.1",
    "barryvdh/laravel-ide-helper": "^3.6",
    "mockery/mockery": "^1.6"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
