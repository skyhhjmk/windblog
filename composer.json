{
  "name": "skyhhjmk/windblog",
  "type": "project",
  "keywords": [
    "windblog",
    "blog system",
    "webman application",
    "high performance"
  ],
  "homepage": "https://www.biliwind.com",
  "license": "BSD 3-Clause License",
  "description": "A high-performance blog system based on Webman framework.",
  "authors": [
    {
      "name": "skyhhjmk",
      "email": "admin@biliwind.com",
      "homepage": "https://www.biliwind.com",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "admin@biliwind.com",
    "issues": "https://github.com/skyhhjmk/windblog/issues",
    "source": "https://github.com/skyhhjmk/windblog"
  },
  "version": "1.2.13",
  "require": {
    "php": ">=8.3",
    "workerman/webman-framework": "^2.1",
    "monolog/monolog": "^2.0",
    "twig/twig": "^3.21",
    "symfony/translation": "^7.3",
    "webman/database": "^2.1",
    "illuminate/events": "^12.32",
    "symfony/var-dumper": "^7.3",
    "webman/console": "^2.1",
    "webman/push": "^1.1",
    "webman/log": "^2.1",
    "workerman/crontab": "^1.0",
    "illuminate/pagination": "^12.32",
    "minishlink/web-push": "^9.0",
    "webman/redis": "^2.1",
    "league/html-to-markdown": "^5.1",
    "webman/admin": "*",
    "intervention/image": "*",
    "webman/rate-limiter": "^1.1",
    "league/commonmark": "^2.7",
    "overtrue/easy-sms": "^3.2",
    "phpmailer/phpmailer": "^6.11",
    "twig/cache-extra": "^3.21",
    "twig/string-extra": "^3.21",
    "twig/inky-extra": "^3.21",
    "vlucas/phpdotenv": "^5.6",
    "elasticsearch/elasticsearch": "^9.1",
    "guzzlehttp/guzzle": "^7.10",
    "php-amqplib/php-amqplib": "^3.7",
    "matthiasmullie/minify": "^1.3"
  },
  "suggest": {
    "ext-event": "For better performance. "
  },
  "autoload": {
    "psr-4": {
      "": "./",
      "app\\": "./app",
      "App\\": "./app"
    },
    "files": [
      "support/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-package-install": [
      "support\\Plugin::install"
    ],
    "post-package-update": [
      "support\\Plugin::install"
    ],
    "pre-package-uninstall": [
      "support\\Plugin::uninstall"
    ],
    "test": "phpunit",
    "test:unit": "phpunit --testsuite 'Test Suite'",
    "test:coverage": "phpunit --coverage-html coverage",
    "test:filter": "phpunit --filter",
    "analyse": "phpstan analyze",
    "cs:check": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix",
    "check": [
      "@cs:check",
      "@analyse",
      "@test"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "phpunit/phpunit": "^12.3",
    "friendsofphp/php-cs-fixer": "^3.64",
    "phpstan/phpstan": "^2.1"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
